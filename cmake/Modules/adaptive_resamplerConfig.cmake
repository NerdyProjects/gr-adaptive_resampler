    ADAPTIVE_RESAMPLER_INCLUDE_DIRS
    NAMES adaptive_resampler/api.h
    HINTS $ENV{ADAPTIVE_RESAMPLER_DIR}/include
        ${PC_ADAPTIVE_RESAMPLER_INCLUDEDIR}
